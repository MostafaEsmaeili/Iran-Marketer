using System;
using AutoMapper;

namespace Pikad.Framework.Infra.Utility
{
    public class ObjectMapper
    {
        public class BaseConverter
        {
            public static TDest ConvertSourceToDest<TSource, TDest>(TSource source)
            {
                var dest = Mapper.Map<TSource, TDest>(source, x => x.CreateMissingTypeMaps = true);
                return dest;
            }
            public static TDest ConvertSourceToDest<TSource, TDest>(TSource source)
            {
                var dest = Mapper.CreateMap<TSource, TDest>()
                    .ForMember(dest => dest.GetType()==typeof(DateTime), opt => opt.Condition(src => (src.baz >= 0)));
                return dest;
            }

        }
    }
}
