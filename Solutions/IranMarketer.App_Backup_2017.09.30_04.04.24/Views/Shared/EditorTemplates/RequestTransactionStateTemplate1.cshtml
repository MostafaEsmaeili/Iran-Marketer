
@using System.Collections
@using Kendo.Mvc.UI
@using IranMarketer.App.Component.Model
@using IranMarketer.Common.Utility


@(Html.Kendo().DropDownListFor(m => m)
      .DataTextField("RequestTransactionStateTite")
      .DataValueField("RequestTransactionStateValue").Enable(true)
      .BindTo(new List<RequestTransactionState>
      {
          RequestTransactionState.Confirm,
          RequestTransactionState.RejectedByManager,
          RequestTransactionState.Wating
      }.
          Select(x => new { RequestTransactionStateTite = x.GetEnumDescription(), RequestTransactionStateValue = (int)x })))


