@using Kendo.Mvc.UI
@using IranMarketer.Domain.Entity
@using MarketMakarSetting = IranMarketer.Domain.DTO.MarketMakarSetting
@using PersonalityRole = IranMarketer.Domain.Enum.PersonalityRole
<form id="MarketMakerSettingForm">
    <div class="panel panel-flat">
        <div class="panel-body" style="display: block;">
            <fieldset id="fielsSet6">
                <div class="form-group">
                    <label>بازار گردان</label>
                    @(Html.Kendo().MultiSelect().Name("MarketMakar")
                        
                          .HtmlAttributes(new
                          {
                              style = "width:400px;margin-right: 1px;",
                              data_required_msg = " الزامی است",
                              required = "required",
                              @class = " k-rtl"
                          })
                          .DataTextField("FullName")
                          .DataValueField("NationalId").Filter(FilterType.Contains)
                          .AutoBind(true)
                          .MinLength(3)
                          .AutoClose(false)

                          .DataSource(source => source.Read(read => read.Action("GetPartyByFilter", "Party",new{roleId=(int)PersonalityRole.MarketMakar})).ServerFiltering(true)))

                </div>
                <div class="form-group">
                    <label>دوره قرارداد از تاریخ</label>
                    @Html.Kendo().DatePicker().Name("MarketMakarFromDate").HtmlAttributes(new {style = "width:250px", type = "text"}).Format("yyyy/MM/dd")
                    <span class="text-danger">*</span>

                </div>
                <div class="form-group">
                    <label>دوره قرارداد تا تاریخ</label>
                    @Html.Kendo().DatePicker().Name("MarketMakarToDate").HtmlAttributes(new {style = "width:250px", type = "text"}).Format("yyyy/MM/dd")
                    <span class="text-danger">*</span>

                </div>
                <div class="form-group">
                    <label>ضریب سالانه کارمزد بازارگردان (خالص ارزش دارییها)</label>
                    <input type="number" min="0" class="form-control" placeholder="درصد کارمزد از محل خالص ارزش دارییها" id="MarkertMakerFeeOnnetAsst" data-bind="value: MarkertMakerFeeOnnetAsst">
                </div>

                <div class="form-group">
                    <label>ضریب سالانه کارمزد بازارگردان (سهم و حق تقدم)</label>
                    <input type="number" min="0" class="form-control" placeholder="درصد کارمزد از محل سهم و حق تقدم" id="MarketMakerFeeOnEquity" data-bind="value: MarketMakerFeeOnEquity" >
                </div>

                <div class="form-group">
                    <label>ضریب سالانه کارمزد بازارگردان (داراییها بدون سهم و حق تقدم)</label>
                    <input type="number" min="0" class="form-control" placeholder="درصد کارمزد از محل داراییها بدون سهم و حق تقدم" id="MarketMakerFeeOnOtherAssetNotEquity" data-bind="value: MarketMakerFeeOnOtherAssetNotEquity">
                </div>

                <div class="form-group">
                    <label>شامل مالیات و عوارض</label>
                    <input type="checkbox" name="MarketMakarConsiderTaxAndToll" id="MarketMakarConsiderTaxAndToll"/>
                </div>
             
            </fieldset>

            <div class="text-right">
                <button id="addMarketMakerSetting" type="button" class="btn btn-primary legitRipple">ذخیره<i class="icon-arrow-left13 position-right"></i></button>
            </div>
        </div>
    </div>

</form>

<div class="panel panel-flat panel-collapsed">
    <div class="panel-heading">
        <h5 class="panel-title">تاریخچه تنظیمات<a class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
                <li><a data-action="close"></a></li>
            </ul>
        </div>
    </div>
    <div class="panel-body">
        <div class="k-rtl">
            @(Html.Kendo().Grid<MarketMakarSetting>()
                  .Name("MarketMakarSettingGrid")
                  .Columns(column =>
                  {

                      column.Bound(x => x.MarketMakarString).Title("بازار گردان ");

                      column.Bound(x => x.MarketMakarFromDate).Title("بازار گردان از تاریخ");
                      column.Bound(x => x.ValidFromJalali).Title("بازار گردان تا تاریخ");
                      column.Bound(x => x.ConsiderTaxAndToll).Title("شامل مالیات و عوارض");

                      column.Bound(x => x.ValidFromJalali).Title("تاریخ");

                      //.ClientTemplate("<a href='" + Url.Action("UpdateUser", "UserManagement", new { UserName = "#=UserName#" }) + "'>#=UserName#</a>").HtmlAttributes("id=RowClick");
                      //.ClientTemplate("<a href='" + Url.Action("GetLogDetails", "Monitoring", new { Id = "#=Id#"}) + "'>#=EventDateTime#</a>").HtmlAttributes("id=RowClick");
                      column.Command(command => command.Custom("ویرایش").Click("MarketMakarSettingGridshowDetails")).Width(180);


                  })
                  .Excel(excel => excel
                      .FileName("MarketMakerSetting.xlsx")
                      .Filterable(true)
                      .AllPages(true)

                      .ForceProxy(true)

                      .AllPages(true)
                      .ProxyURL(Url.Action("CustomExcelReport", "ExpenseSetting"))
                  )
                  .Sortable(sortable => sortable.AllowUnsort(false))

                  .Pageable(pager => pager
                      .Input(true)
                      .Numeric(true)
                      .Info(true)
                      .PreviousNext(true)
                      .Refresh(true)
                      .PageSizes(new[] { 10, 20, 50, 100 })).Selectable(x =>
                      {
                          x.Enabled(true).Mode(GridSelectionMode.Single).Type(GridSelectionType.Row);
                      }).Events(c => c.Change("MarketMakarSettingGridonChenge"))
                  .ToolBar(toolbar =>
                  {
                      toolbar.Template(@<text>
                                           <div class="toolbar" style="direction: ltr !important;">

                                               <div class="row pull-right ">
                                                   <div style="display: inline-block;">
                                                       <a class="pull-left k-button k-button-icontext k-grid-excel" href="#"><span class="k-icon k-i-excel"></span>Excel</a>
                                                   </div>
                                                   <div class="" style="width: 400px; margin-right: 15px; display: inline-block;">
                                                       <div class="input-group">
                                                           <span class="input-group-addon"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></span>
                                                           <input type="text" class="form-control" id='FieldFilter' placeholder="جست و جو..." style="direction: rtl">
                                                           <span class="input-group-btn">
                                                               <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></button>
                                                           </span>
                                                       </div>
                                                   </div>
                                               </div>
                                           </div>
                                        </text>);
                  })
                  .AllowCopy(true)
                  .Selectable()
                  .Scrollable()
                  .HtmlAttributes(new { style = "height:500px;" })
                  .DataSource(dataSource => dataSource
                      .Ajax().Sort(x => x.Add(a => a.ValidFrom).Descending())
                      .PageSize(20).Read(read => read.Action("GetHistoricalMarketMakarSettings", "MarketMakarSetting"))
                  )
                  .Resizable(resize => resize.Columns(true))
                  .Reorderable(reorder => reorder.Columns(true)))

        </div>
    </div>

</div>


<style type="text/css">
    .form-horizontal .form-group {
        margin-right: 0 !important;
        margin-left: 0 !important;
    }

    .form-group-material > .control-label {
        opacity: 1 !important;
        filter: alpha(opacity=0);
    }
</style>
<script type="text/javascript" src="~/assets/js/pages/form_validation.js"></script>
<script type="text/javascript" src="~/assets/js/plugins/forms/inputs/formatter.min.js"></script>
<script>
    $("#addMarketMakerSetting").click(function() {

        if ($("#MarketMakerSettingForm").valid() === false || $("#MarketMakerSettingForm").kendoValidator().data("kendoValidator").validate() === false) {
            return;
        } else {

            debugger;
            //var dataa = @Html.Raw(Json.Encode(Model));

            var data = {
                "MarketMakar": $('#MarketMakar').data("kendoMultiSelect").dataItems(),
                "ConsiderTaxAndToll": $('[name=MarketMakarConsiderTaxAndToll]').prop('checked'),
                "MarketMakarFromDate": $('#MarketMakarFromDate').val(),
                "MarketMakarToDate": $('#MarketMakarToDate').val(),
                "MarkertMakerFeeOnnetAsst": $('#MarkertMakerFeeOnnetAsst').val(),
                "MarketMakerFeeOnEquity": $('#MarketMakerFeeOnEquity').val(),
                "MarketMakerFeeOnOtherAssetNotEquity": $('#MarketMakerFeeOnOtherAssetNotEquity').val(),

            };




            $.ajax({
                url: '@Url.Action("SaveSetting", "MarketMakarSetting")',
                type: "POST",
                dataType: "json",

                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                401: function() {
                    var url = '@Url.Action("Login", "Account")';
                    window.location.href = url;
                },
                error: function(response) {

                    showNotification(response.Message, 'e');
                },

                success: function(response) {

                    if (response != null && response.BRuleCode == '1000') {
                        showNotification(response.Message, 's');
                        $(':input', '#MarketMakerSettingForm')
                            .not(':button, :submit, :reset, :hidden')
                            .val('')
                            .removeAttr('checked')
                            .removeAttr('selected');
                        $('#MarketMakarSettingGrid').data('kendoGrid').dataSource.read();

                    } else {
                        showNotification(response.Message, 'e');

                    }
                }
            });
        }
    });

    function MarketMakarSettingGridshowDetails(e) {
        e.preventDefault();
        $("#fielsSet6").removeAttr('disabled');

    }

    function MarketMakarSettingGridonChenge(e) {
        debugger;
        $("#fielsSet6").attr('disabled', 'disabled');
        var grid = $("#MarketMakarSettingGrid").data("kendoGrid");
        var dataItem = grid.dataItem(grid.select());

        var MarketMakarIds = $.map(dataItem.MarketMakar, function (v){
            return v.NationalId;
        });
        $('#MarketMakar').data("kendoMultiSelect").value(MarketMakarIds);
        $('[name=MarketMakarConsiderTaxAndToll]').prop('checked', dataItem.ConsiderTaxAndToll);
        $('#MarketMakarFromDate').val(dataItem.MarketMakarFromDate);
        $('#MarketMakarToDate').val(dataItem.MarketMakarToDate);
        $('#MarkertMakerFeeOnnetAsst').val(dataItem.MarkertMakerFeeOnnetAsst);
        $('#MarketMakerFeeOnEquity').val(dataItem.MarketMakerFeeOnEquity);
        $('#MarketMakerFeeOnOtherAssetNotEquity').val(dataItem.MarketMakerFeeOnOtherAssetNotEquity);
    }

</script>


