@using System.Diagnostics.Eventing.Reader
@using Kendo.Mvc.UI
@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl" lang="fa-IR">
<head>
    <title>IranMarketers</title>
    <meta charset="utf-8">
    <meta name="fontiran.com:license" content="License_Code">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/Layout/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/assets/Layout/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/Layout/slick/slick-theme.css" />
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/Layout/slick/slick.min.js"></script>
    <script type="text/javascript" src="~/assets/Layout/js/main.js"></script>
    <script src="~/Scripts/jszip.js"></script>
    <script src="~/assets/js/plugins/jquery.serializejson.min.js"></script>

    <script src="~/assets/js/plugins/jquery.loadJSON.min.js"></script>
    <script src="~/assets/js/plugins/KendoJsonBinder.js"></script>
</head>
<body>
    <div id="wrapper" class="container-fluid">
        <div class="row col-md-12 row1">
            <div class="col-md-1"></div>
            <div id="header" class="header col-sm-10 col-md-10 ">
                <nav class="navbar navbar-inverse navbar-fixed-top col-sm-12 col-md-12">
                    <div class="container-fluid">
                        <div class="navbar-header col-sm-12 col-md-12">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse" id="myNavbar">
                            <ul class="nav navbar-nav navbar-left col-sm-3 col-md-3 col-xs-3 ">
                                <div class=" logo col-md-7 no_padding">
                                    <div class="col-md-12">
                                        <div class="col-md-3 no_padding"></div>
                                        <a href="@Url.Action("Index","Home")"><img class="slogan col-md-6 no_padding img-responsive" src="~/assets/Layout/image/logo.png" style="cursor: pointer;"></a>
                                        <div class="col-md-3 no_padding"></div>
                                    </div>

                                    <div class="col-md-12" style="max-height: 25px;">
                                        <a class="navbar-brand a1 col-md-4 no_padding" href="@Url.Action("Index","Home")">Iran</a>
                                        <a class="navbar-brand a2 col-md-8 no_padding" href="@Url.Action("Index","Home")"></a>
                                    </div>

                                </div>
                                <div class="col-md-5 no_padding signin">
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <button class="btn navbar-btn signin "><a href="@Url.Action("Login", "Account")">ورود/ثبت ‌نام</a></button>
                                    }
                                    else
                                    {
                                        <button class="btn navbar-btn  ">@User.Identity.Name</button>
                                    }
                                </div>
                                <!--	<a href="#"> <span  class="logo img-responsive"></span></a>-->
                            </ul>
                            <ul class="nav navbar-nav navbar-right col-sm-9 col-md-9 col-xs-12">
                                <button class="btn navbar-btn "><a href="@Url.Action("Index","Home")">صفحه‌ی اصلی</a></button>
                                <button class="btn navbar-btn "><a href="@Url.Action("Index","SearchForJob")">فرصت‌های شغلی</a></button>
                                <button class="btn navbar-btn "><a href="businessMan.html">ایران مارکترز کارجو</a></button>
                                <button class="btn navbar-btn "><a href="boss.html">ایران مارکترز کارفرما</a></button>

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-md-1"></div>
        </div>


        <div class="row col-sm-12 col-md-12 col-xs-12 no_margin">
            <div class="row col-sm-12 no_margin">
              @RenderBody()
                <div class="col-sm-12  col-md-12 col-xs-12  footer">
                    <div class="col-sm-12 nopaddingright"><br></div>
                    <div class="row col-sm-12 nopaddingright">
                        <div class="col-xs-6">
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="row">
                                        <div class="col-xs-2 icons">
                                            <a href="#">
                                                <img src="~/assets/Layout/image\insta.png" class="icon">
                                            </a>
                                        </div>

                                        <div class="col-xs-2 icons">
                                            <a href="#">
                                                <img src="~/assets/Layout/image\telegram.png" class="icon">
                                            </a>
                                        </div>

                                        <div class="col-xs-2 icons">
                                            <a href="#">
                                                <img src="~/assets/Layout/image\facebook.png" class="icon">
                                            </a>
                                        </div>
                                        <div class="col-xs-2 icons">
                                            <a href="#">
                                                <img src="~/assets/Layout/image\twitter.png" class="icon">
                                            </a>
                                        </div>
                                        <div class="col-xs-2 icons">
                                            <a href="#">
                                                <img src="~/assets/Layout/image\linkedin.png" class="icon">
                                            </a>
                                        </div>
                                        <div class="col-xs-2 icons">
                                            <a href="#">
                                                <img src="~/assets/Layout/image\aparat.png" class="icon">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 nopaddingright">
                            <button class="footerButton"><a href="businessMan.html">ایران مارکترز کارجو</a></button>
                            <button class="footerButton"><a href="boss.html">ایران مارکترز کارفرما</a></button>
                            <button class="footerButton"><a href="#">قوانین و مقررات</a></button>
                            <button class="footerButton"><a href="#">درباره ی ما</a></button>
                            <button class="footerButton"><a href="#">تماس با ما</a></button>
                        </div>
                    </div>
                    <div class="col-sm-12 nopaddingright"><br></div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>